<style type="text/css">
      .text-center {
        padding-bottom: 10%;
      }

      .sgnBtn {
        margin-top: 35px;
      }

      .other {
      	margin-bottom: 15px;
      }

      .text {
      	font-size: 20px;
      	color: #9ACD32;
      }
</style>

<div class="container">
	<%= form_for [@company, @update] do |f| %>
		<div class="other"><%= f.label :update_SEI, "Updates", class: "text" %>
		<%= f.text_area :update_SEI, rows: "5", class: "input-xxlarge" %></div>
		
		<div class="other"><%= f.label :challenge, "Challenges", class: "text" %>
		<%= f.text_area :challenge, rows: "5", class: "input-xxlarge" %></div>
		
		<div class="other"><%= f.label :support_req, "Support required", class: "text" %>
		<%= f.text_area :support_req, rows: "5", class: "input-xxlarge" %></div>
		
		<div class="other"><%= f.label :impact, "People impacted", class: "text" %>
		<%= f.text_field :impact %></div>
		
		<div class="other"><%= f.label :employed, "Number of employees", class: "text" %>
		<%= f.text_field :employed %></div>

		<div class="other"><%= f.label :volunteers, "Number of volunteers", class: "text" %>
		<%= f.text_field :volunteers %></div>

		<div class="other"><%= f.label :raised_funds, "Raised funds", class: "text" %>
		<%= f.text_field :raised_funds %></div>

		<%= f.submit "Submit", class: "btn-large btn-success sgnBtn" %>
	<% end %>
</div>

<%# render "form" %>