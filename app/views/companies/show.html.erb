<style>
	.maindiv {
		padding-left:10%;
	}

	.noupdates{
		padding-bottom:1%;
	}

	.spacerighttop{
		padding-right: 5%;
		padding-top: 5%;
	}

	.cutright{
		margin-right:10%;
	}

	.green{
		color: #9ACD32;
	}

</style>

<div class="maindiv"><%#= @company.name %>
	<div class="row-fluid">
		<%= link_to "Add new update", new_company_update_path(@company) ,class: "btn btn-large btn-success"%>
		<%= link_to "Help!", new_company_update_path(@company) ,class: "btn btn-large btn-danger"%>
	</div>

	<%if @company.updates.blank?%>
		<h4 class="noupdates">No updates at this time</h4>
	<%else%>

		<%
		require 'gchart'
		impacted = []
		employees = []
		volunteers = []
		funds = []
		grid= []
		%>
	    
		<h3 style="display: none">People impacted</h3>
		<% @company.updates.reverse![0..11].each_with_index do |u, index| %>
			<% if !u.impact.blank? %>
				<p style="display: none"><%=impacted[index]=u.impact %></p>
			<% end %>

			<h3 style="display: none">Number of employees</h3>
			<% if !u.employed.blank? %>
				<p style="display: none"><%=employees[index]=u.employed %></p>
			<% end %>

			<h3 style="display: none">Number of volunteers</h3>
			<% if !u.volunteers.blank? %>
				<p style="display: none"><%=volunteers[index]= u.volunteers %></p>
			<% end %>

			<h3 style="display: none">Raised funds</h3>
			<% if !u.raised_funds.blank? %>
				<p style="display: none"><%=funds[index]= u.raised_funds %></p>
			<% end %>
		<% end %>
		<p style="display: none">
			<%=grid[0]=impacted.max%>
			<%=grid[1]=employees.max%>
			<%=grid[2]=volunteers.max%>
			<%=grid[3]=funds.max%>
		</p>	

		<div class="row-fluid">
			<img class="spacerighttop" src="<%=
		    	Gchart.line(:size => '500x300', 
		    				:data => [impacted], 
		    				:line_colors => 'EB3724',
		    				:title => "People impacted",
		    				:axis_with_labels => 'x,r',
            				:axis_labels => ['-1y|-9m|-6m|-3m|This month', '0|300'])%>">
			<img class="spacerighttop" src="<%=
		    	Gchart.line(:size => '500x300', 
		    				:data => [employees], 
		    				:line_colors => 'EB3724',
		    				:title => "Number of employees",
		    				:axis_with_labels => 'x,r',
            				:axis_labels => ['-1y|-9m|-6m|-3m|This month', '0|2006|2007'])%>">
		</div>
		<div class="row-fluid">
			<img class="spacerighttop" src="<%=
		    	Gchart.line(:size => '500x300', 
		    				:data => [volunteers], 
		    				:line_colors => 'EB3724',
		    				:title => "Number of volunteers",
		    				:axis_with_labels => 'x,r',
            				:axis_labels => ['-1y|-9m|-6m|-3m|This month', '2005|2006|2007'])%>">
		    <img class="spacerighttop" src="<%=
		    	Gchart.line(:size => '500x300', 
		    				:data => [funds], 
		    				:line_colors => 'EB3724',
		    				:title => "Raised funds",
		    				:axis_with_labels => 'x,r',
            				:axis_labels => ['-1y|-9m|-6m|-3m|This month', '2005|2006|2007'])%>">
		</div>
		
		<hr>
		<h3 class="green">Updates</h3>
		<% @company.updates.reverse!.each do |u| %>
			<% if !u.update_SEI.blank? %>
				<pre class="cutright"><span class="green">Date:<%=u.created_at%><br></span><%=u.update_SEI %></pre>
			<% end %>
		<% end %>
		<hr>
		<h3 class="green">Challenges</h3>
		<% @company.updates.reverse!.each do |u| %>
			<% if !u.challenge.blank? %>
				<pre class="cutright"><span class="green">Date:<%=u.created_at%><br></span><%= u.challenge %></pre>
			<% end %>
		<% end %>
		<hr>
		<h3 class="green">Support required</h3>
		<% @company.updates.reverse!.each do |u| %>
			<% if !u.support_req.blank? %>
				<pre class="cutright"><span class="green">Date:<%=u.created_at%><br></span><%= u.support_req %></pre>
			<% end %>
		<% end %>
		<hr>
		
		
		
<%end%>

<div class="row-fluid">
<br><%= link_to "Add new update", new_company_update_path(@company) ,class: "btn btn-large btn-success"%>
<%= link_to "Help!", new_company_update_path(@company) ,class: "btn btn-large btn-danger"%>
</div>
<br>
<br>
</div>