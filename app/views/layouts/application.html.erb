<body>
							

	<div class="header text-left">
        <ul class="nav nav-pills pull-right">
        <% if company_signed_in? %>
                <%= current_company.email %>
                <%# link_to "My Account", companies_path(current_company.id) %>
                <%= link_to "Sign out", destroy_company_session_path, :method => :delete, class: "btn btn-large btn-error" %>
                
              <% else %>
                  <%= link_to "Login", new_company_session_path, class: "btn btn-large btn-success" %> 
                  <%= link_to "Sign up", new_company_registration_path, class: "btn btn-large btn-success", role: "button" %>
