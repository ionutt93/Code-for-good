        <%= link_to "Home", root_path,  class: "btn btn-large btn-success", role: "button" %>
        </ul>
        <img class="image" src="http://socialentrepreneurs.ie/wp-content/themes/sei/images/logo.png">

      <hr id="smallhr">
      </div>  

      <%= yield %>
	
