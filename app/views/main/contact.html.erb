<h1>Contact Us</h1>

<%= form_tag :action => 'sendmail', :controller => "mail" %>

	<%= label :subject, "Subject" %>
	<%= text_field_tag :subject, nil, :placeholder => "Subject..." %>

	<% if current_company %>
		<%= hidden_field_tag "email", current_company.email %>
	<%else%>
		<%= label :email, "Please write you e-mail address" %>
		<%= email_field_tag :email, nil, :placeholder => "Your e-mail address so we can contact you back..." %>	

	<%end%>

	<%= label :message, "Message" %>
	<%= text_area_tag :message,nil, :placeholder => "Tell us something here..." %>
	
	<%= submit_tag "Send us an e-mail"%>	
