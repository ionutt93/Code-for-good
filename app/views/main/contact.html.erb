<style type="text/css">
  .form-signin {
        width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
        box-shadow: 7px 7px 4px #D8D8D8;
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: 35px;
        margin-top: 15px;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
      .other {
        padding-top: 5%;
      }

      .text-center {
        padding-bottom: 10%;
      }

      .sgnBtn {
        margin-left: 25%;
        margin-top: 35px;
      }

</style>
<div class="container-fluid">


<div class="form-signin">
<%= form_tag :action => 'sendmail', :controller => "mail"  %>
	<h1 class="text-center">Contact Us</h1>
	<%= label :subject, "Subject" %>
	<%= text_field_tag :subject, nil, class: "input-block-level", :placeholder => "Subject..." %>

	<% if current_company %>
		<%= hidden_field_tag "email", current_company.email %>
	<%else%>
		<%= label :email, "Please write you e-mail address" %>
		<%= email_field_tag :email, nil, class: "input-block-level", :placeholder => "Your e-mail address so we can contact you back..." %>	

	<%end%>

	<%= label :message, "Message" %>
	<%= text_area_tag :message,nil, class: "input-block-level", :placeholder => "Tell us something here..." %>
	
	<%= submit_tag "Send us an e-mail", class: "btn btn-success sgnBtn" %>	
</div>
</div>