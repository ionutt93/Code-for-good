<style type="text/css">
  .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
        box-shadow: 7px 7px 4px #D8D8D8;
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: 35px;
        margin-bottom: 15px;
        margin-top: 15px;
        padding: 7px 9px;
      }
      .other {
        padding-top: 5%;
      }

      .text-center {
        padding-bottom: 10%;
      }
      .btn {
        margin-top: 15px;
      }

      .sgnBtn {
        margin-left: 35%;
        margin-top: 35px;
      }

</style>

<div class="container">

	<%= form_for(resource, :as => resource_name, :html => {:class => "form-signin"}, :url => session_path(resource_name)) do |f|%>
    <h2 class="text-center">Sign in</h2>
	  <div><%#= f.label :email %>
	  <%= f.email_field :email, :autofocus => true, type: "text", class: "input-block-level", placeholder: "E-mail" %></div>

	  <div><%#= f.label :password %>
	  <%= f.password_field :password, class: "input-block-level", placeholder: "Password" %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div class="checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end %>

	  <div><%= f.submit "Sign in", class: "btn btn-large btn-success sgnBtn" %></div>
    <div class="other">
      <%= render "devise/shared/links" %>
	  </div>
  <% end %>
</div>